<div class="modal-dialog__header">
  <div class="grid">
    <div class="col--10-12">
      <p class="u-spacer--tiny">
        Bewerk de deelnemerslijst
      </p>
    </div>
    {{!--       <div class="col--2-12 u-align-right">
            <a class="link--icon--close" href="#">
            <span class="u-visually-hidden">Venster sluiten</span>
            </a>
            </div> --}}
  </div>
</div>

<div class="modal-dialog__content">

  {{#if status.isAdding}}
    <button {{action "setStatus" "isAdding"}}
      class="px-3 py-1 font-bold 
            {{if status.isAdding "bg-gray-300 text-black rounded-tr rounded-tl" "text-gray-300 hover:text-teal-500"}}">
      Kiez een deelnemer
    </button>
  {{else}}
    <button {{action "setStatus" "isEditing"}}
      class="px-3 py-1 font-bold 
            {{if status.isEditing "bg-gray-300 text-black rounded-tr rounded-tl" "text-gray-300 hover:text-teal-500"}}">
      Bewerk de lijst
    </button>
  {{/if}}
  <button {{action "setStatus" "isCreatingPerson"}}
    class="px-3 py-1 font-bold 
          {{if status.isCreatingPerson "bg-gray-300 text-black rounded-tr rounded-tl" "text-gray-300 hover:text-teal-500"}}">
    <i class="plus icon"></i>Mens
  </button>
  <button {{action "setStatus" "isCreatingMembership"}}
    class="px-3 py-1 font-bold 
          {{if status.isCreatingMembership "bg-gray-300 text-black rounded-tr rounded-tl" "text-gray-300 hover:text-teal-500"}}">
    <i class="plus icon"></i>Lidmaatschap
  </button>

  <div class="bg-gray-300 p-2 text-black">
    {{#if status.isEditing}}
      <div class="flex justify-end mb-2">
        <button {{action "setStatus" "isAdding"}}
          class="ml-2 p-1 border-2 border-gray-800 rounded
                bg-white hover:bg-gray-800
                text-gray-800 hover:text-white">
          <i class="plus icon"></i>Voeg een nieuwe deelneemer
        </button>
      </div>
      {{!-- List of current attendees --}}
      <ul class="w-full">
        {{#each sortedAttendees as |attendee|}}
          <li class="link-list__item flex items-center hover:bg-gray-400">
            <span class="flex-1">{{attendee.member.firstname}} {{attendee.member.lastname}}</span>
            <button {{action "removeAttendee" attendee}}
                class="px-3 py-1 hover:bg-teal-600 hover:text-white rounded">
              <i class="trash icon pl-1"></i>
            </button>
          </li>
        {{/each}}
      </ul>
    {{/if}}

    {{#if status.isAdding}}
      <div class="flex justify-end mb-2">
        <button {{action "setStatus" "isEditing"}}
          class="ml-2 p-1 border-2 border-gray-800 rounded
                bg-white hover:bg-gray-800
                text-gray-800 hover:text-white">
          <i class="close icon"></i>
        </button>
      </div>
      {{!-- List of available people --}}
      <ul class="w-full">
        {{!-- TODO: Take care of pagination --}}
        {{#each availableMemberships as |membership|}}
          <li class="link-list__item">
            <button {{action "addAttendee" membership}}
                class="px-2 py-1 hover:bg-teal-600 hover:text-white w-full text-left rounded flex">
              <span class="flex-1">
                {{membership.member.firstname}} {{membership.member.lastname}}
              </span>
              <span class="flex-none font-light">{{membership.role.label}}</span>
            </button>
          </li>
        {{/each}}
      </ul>
    {{/if}}

    {{#if status.isCreatingPerson}}
      <div class="flex flex-col">
        <div class="flex mb-1 items-center">
          <label class="w-24">Fisrtname</label>
          <Input @value={{newFirstname}} placeholder="First name" class="flex-1 p-1" />
        </div>
        <div class="flex mb-2 items-center">
          <label class="w-24">Lastname</label>
          <Input @value={{newLastname}} placeholder="Last name" class="flex-1 p-1" />
        </div>
        {{!-- Organization selection menu --}}
        <select onchange={{action "setOrganization"}}
                class="flex-1 mr-1 bg-gray-700 text-white mb-2">
          <option disabled selected value> -- Kiez een organisatie -- </option>
          {{#each organizations as |organization|}}
            <option value={{organization.id}}>{{organization.title}}</option>
          {{/each}}
        </select>
        <button {{action "createPerson"}}
          class="ml-2 p-1  border-2 border-gray-800 rounded
                 bg-white hover:bg-gray-800
                 text-gray-800 hover:text-white"
          disabled={{not readyToCreatePerson}}>
          Creër
        </button>
      </div>
    {{/if}}

    {{#if status.isCreatingMembership}}
      <div class="flex items-stretch">
        {{!-- Person selection menu --}}
        <select onchange={{action "setPerson"}}
                class="flex-1 mr-1 bg-gray-700 text-white mb-2 h-full">
          <option disabled selected value> -- Kiez iemand -- </option>
          {{#each nonMemberPeople as |person|}}
            <option value={{person.id}}>{{person.firstname}} {{person.lastname}}</option>
          {{/each}}
        </select>

        {{!-- Role selection menu --}}
        <select onchange={{action "setRole"}}
                class="flex-1 mr-1 bg-gray-700 text-white mb-2">
          <option disabled selected value> -- Kiez een rol -- </option>
          {{#each roles as |role|}}
            <option value={{role.id}}>{{role.label}}</option>
          {{/each}}
        </select>

        <button {{action "createMembership"}}
          class="ml-2 p-1  border-2 border-gray-800 rounded
                bg-white hover:bg-gray-800
                text-gray-800 hover:text-white"
          disabled={{not readyToCreateMembership}}>
          Creër
        </button>
      </div>
    {{/if}}
  </div>
</div>

<div class="modal-dialog__footer">
  {{#wu-button-group}}
    {{wu-button label="Vervangen"
      onClick=(action "commit")
      command="ctrl + j"
      commandLocation="below"}}

    {{!-- {{wu-button label="Negeer"
      onClick=null
      size="tiny"
      isLink=true
      isDark=true
      isNarrow=true
      command="esc"
      commandLocation="below"}} --}}
  {{/wu-button-group}}
</div>

{{yield}}
